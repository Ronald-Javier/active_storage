<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

  <% if @post.images.attached? %>
<p>
<strong>Images:</strong>
<br>
  <% @post.images.each do |image| %><br>
  <%= image_tag image.variant(resize: "400x400", negate: true, flip: true) %>
  <br><%= link_to 'Remove', delete_image_post_path(@post, image), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
